<div class="content-wrapper">

    <div class="container-xxl flex-grow-1 container-p-y">

        <div class="card col-sm-12 col-xl-12">
                     <div class="d-flex justify-content-between">
                    <div>
                    <h5 class="card-header">Products</h5>
                    </div>
                    
                </div>
              <div class="table-responsive text-nowrap p-4">
                <table class="table table-hover table p-3" style="width:100%" id="dataTable">
                    <thead>
                        <tr>
                            <th scope="col">Sl NO.</th>
                            <th>Name</th>
                            <th>Brand</th>
                            <th>Vendor</th>
                            <th>Price</th>
                            <th>Image</th>
                            <th>Category</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        {{#each productData}}
                        <tr>
                            <th scope="row">{{inc @index}}</th>

                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>{{this.name}}</strong>
                            </td>
                            <td>{{this.brand}}</td>
                            <td>{{this.vendor.name}} <br><strong>{{this.vendor.businessName}}</strong></td>
                            <td>{{this.price}}</td>

                            <td><img src="/product-images/{{this.images.[0]}}" style="width: 50px; height: 50px;"></td>
                            <td>{{this.categoryName}}</td>

                            
                            
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
     $(document).ready(function () {
    $('#dataTable').wrap('<div id="hide" style="display:none"/>');
    $('#hide').css('display', 'block');
  });
  var table = $('#dataTable').DataTable();

</script>