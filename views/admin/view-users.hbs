<div class="content-wrapper">

    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">All Users</h6>
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">Sl NO.</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone</th>

                            <th scope="col">Block</th>

                        </tr>
                    </thead>
                    <tbody>
                        {{#each userDetails}}
                        <tr>
                            <th scope="row">{{inc @index}}</th>
                            <td>{{this.firstName}}</td>
                            <td>{{this.lastName}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.phone}}</td>

                            <td>{{#if this.blockedUser}}

                                <a href="javascript:void(0)" onclick="blockAndUnblock('{{this._id}}')"><button
                                        type="button" class="btn btn-success btn-sm">Un Block</button></a>


                                {{else}}
                                <a href="javascript:void(0)" onclick="blockAndUnblock('{{this._id}}')"><button
                                        type="button" class="btn btn-danger btn-sm">Block</button></a>

                                {{/if}}

                            </td>

                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>

    function blockAndUnblock(id) {
        swal({
            title: "Are you sure?",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {

                if (willDelete) {
                    $.ajax({
                        url: '/admin/blockUnBlockUser/' + id,
                        method: 'get',
                        success: (response) => {
                            if (response.status) {
                                swal("Success", {
                                    icon: "success",
                                });
                            }
                        }


                    })
                    setTimeout(function () {
                        window.location.reload(1);
                    }, 1000);


                }

            });

    }

</script>