<div class="content-wrapper">

    <div class="container-xxl flex-grow-1 container-p-y">

        <div class="card">
            <h5 class="card-header">Products</h5>
            <div class="table-responsive text-nowrap">
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">Sl NO.</th>
                            <th>Name</th>
                            <th>Brand</th>
                            <th>Price</th>
                            <th>Image</th>
                            <th>Category</th>
                            <th>Stock</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        {{#each productData}}
                        <tr>
                            <th scope="row">{{inc @index}}</th>

                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>{{this.name}}</strong>
                            </td>
                            <td>{{this.brand}}</td>
                            <td>{{this.price}}</td>

                            <td><img src="/product-images/{{this.images.[0]}}" style="width: 50px; height: 50px;"></td>
                            <td>{{this.categoryName}}</td>

                            <td><span class="badge bg-label-primary me-1">Active</span></td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow"
                                        data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="/vendor/editProduct?id={{this._id}}"><i
                                                class="bx bx-edit me-1"></i> Edit</a>
                                        <a class="dropdown-item" href="/vendor/deleteProduct?id={{this._id}}"><i
                                                class="bx bx-trash me-1"></i> Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>