<section class="vh-100 bg-image" style="background-image: url('/images/home.jpg') ; -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-white  text-dark" style="border-radius: 1rem;">
                    <div class="card-body p-5 ">

                        <h2 class="fw-bold mb-5 text-uppercase text-center">Login</h2>
                        {{#if userLogErr}}
                        <div class="alert alert-danger alert-dismissible" role="alert">
                        {{userLogErr}}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                        {{/if}}
                        <form action="/userLogin" method="post" name="login" onsubmit="return validateLogin()">

                            <div class="form-outline form-white mb-5">
                                <input type="email" id="email" name="email" placeholder="Email"
                                    class="form-control form-control-lg" autocomplete="off" />
                                <span id="requiredEmail" class="text-danger"> </span>
                            </div>


                            <div class="form-outline form-white mb-4">
                                <input type="password" id="password" name="password" placeholder="Password"
                                    class="form-control form-control-lg" autocomplete="off" />
                                <span id="requiredPassword" class="text-danger"> </span>

                            </div>

                            <div class="text-center">
                                <p class="small mb-3 pb-lg-2"><a class="text-dark-50 " href="#!">Forgot password?</a>
                                </p>
                                <button class="btn btn-outline-dark btn-lg px-5" type="submit">Login</button>
                            </div>
                        </form>

                        <div class="text-center">
                            <p class="mt-4">Don't have an account? <a href="/signup" class="text-black-50 fw-bold">Sign
                                    Up</a>
                            </p>
                        </div>
                    </div>



                </div>
            </div>
        </div>
    </div>
    </div>

</section>